<h1>My Total Hours</h1>

<!--Table to show hours-->
	<section>
		<table class = "table table-striped">
  			<tr>
			    <th>Title</th>
			    <th>Hours Required</th>
			    <th>Hours Completed</th>
  			</tr>
  			<% @credentials.each do |credential| %>
  			<tr>

			    <td><p><%= credential.title %></p></td>
			    <td><p><%= credential.hoursrequired %></p></td>
			    <td>
					<% @courses.sum do |course| %>
					<p><%= course.credits %></p>
					<% end %>
				</td>
			<% end %>
				
  			</tr>
  			
		</table>
	</section>


<%= link_to "View Courses", courses_path %> | <%= link_to "View Credentials", credentials_path %>


			  