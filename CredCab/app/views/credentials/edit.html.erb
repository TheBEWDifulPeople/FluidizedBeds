<h1>Edit Credential</h1>

<% if @credentials.errors.any? %>
	<h2>There were errors updating your credential!</h2>
	<ul>
		  <% @credentials.errors.full_messages.each do |msg| %>
		  <li><%= msg %></li>
		  <% end %>
	</ul>
<% end %>

<section>
		<%= form_for @credentials do |f| %>
			    <p><%= f.text_field :title, :placeholder => "Title" %></p>
			    <p><%= f.text_field :issuing_authority, :placeholder => "Issuing Authority" %></p>
			    <%= f.label :date_issued %>
			    <p><%= f.date_select :date_issued %></p>
			    <%= f.label :last_renewal %>
				<p><%= f.date_select :last_renewal%></p>
				<%= f.label :next_renewal %>
				<p><%= f.date_select :next_renewal%></p>
				<p><%= f.text_field :hoursrequired, :placeholder => "Hours Required for Renewal" %></p>
				
				<%= f.label :Add_Credential_Certificate %>
				<p><%= f.file_field :credential_image %></p>
				<p><label><%= f.check_box :remove_credential_image %> Remove Credential Image</label></p>
				
				<%= f.submit %>
			<% end %>
</section>
</br>

<%= link_to "Cancel", credentials_path %>